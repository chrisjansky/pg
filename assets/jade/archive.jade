extends templates/_basic

append template-variables
  - var pageSettings = {index: null}

block template-body
  include partials/_header

  main.l-container
    .l-wrap
      strong.t-caps Archive
      section.o-loop
        each doublePosts in [1, 2]
          each instance, index in [386, 345, 343, 313, 242]
            article.o-loop__item(data-random="o-loop__item")
              .o-loop__title
                h2.t-h2 News Title
                span.t-date 27/10/2014
              .o-loop__thumbnail
                img.o-loop__image(src="http://unsplash.it/320/180/?image=#{instance}", alt="unsplash.it")
              .o-loop__content.o-color-block(data-random="o-color-block")
                p The old man babbled on, unheeded by the boys, who were long accustomed to his garrulousness, and whose vocabularies, besides, lacked the greater portion of the words he used.
      ul.o-loop__footer.o-pagination
        li.o-pagination__item
          span.o-pagination__link--selected 1
        each instance in [2, 3, 4]
          li.o-pagination__item
            a.o-pagination__link(href="#")= instance